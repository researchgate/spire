{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "spire lint",
    "test": "spire test",
    "release": "spire release"
  },
  "spire": {
    "extends": "spire-config-default",
    "plugins": [
      "spire-plugin-yarn",
      [
        "spire-plugin-lerna-release",
        {
          "createRelease": "github",
          "allowBranch": "main"
        }
      ]
    ]
  },
  "prettier": "spire-plugin-prettier/config",
  "devDependencies": {
    "prettier": "2.6.2"
  }
}
