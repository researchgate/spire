{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "spire lint",
    "test": "spire test",
    "release": "spire release",
    "pre-release": "lerna publish --include-merged-tags --no-git-reset --no-git-tag-version --canary --preid next --pre-dist-tag next --yes"
  },
  "spire": {
    "extends": "spire-config-default",
    "plugins": [
      "spire-plugin-yarn",
      [
        "spire-plugin-lerna-release",
        {
          "githubRelease": true
        }
      ]
    ]
  },
  "prettier": "spire-plugin-prettier/config",
  "devDependencies": {
    "prettier": "1.19.1"
  }
}
